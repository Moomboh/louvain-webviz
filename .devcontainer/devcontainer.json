{
  "name": "louvain-webviz",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "docker.showExplorer": false
  },
  "containerUser": "node",
  "workspaceFolder": "/workspaces/louvain-webviz",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/louvain-webviz,type=bind,consistency=cached",
  "extensions": [
    "runem.lit-plugin",
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint",
    "joshbolduc.commitlint",
    "eamodio.gitlens",
    "ms-azuretools.vscode-docker",
    "ritwickdey.LiveServer"
  ],
  "postCreateCommand": "npx install playwright"
}
